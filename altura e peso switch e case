#include <stdio.h>
int main(){

char sexo;
float altura, peso;
    printf("Digite o sexo (M/F): ");
    scanf("%c", &sexo);
    switch(sexo){
        case 'M':
        case 'm':
        printf("\nDigite a altura masculina: ");
        scanf("%f", &altura);
        peso = (72.7*altura)-58;
        printf("O peso ideal masculino é: %2.f kg\n", peso);
        break;
        case 'F':
        case 'f':
        printf("\nDigite a altura feminina: ");
        scanf("%f", &altura);
        peso = (62.1*altura)-44.7;
        printf("O peso ideal feminino é: %2.f kg\n", peso);
        break;
        
    }
        return 0;
    
}
