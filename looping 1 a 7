#include <stdio.h>
 int main(){
     int dia;
     
     for(;;){
     printf("Digite um número de 1 a 7: ");
     scanf("%d", &dia);
     
     if (dia < 1 || dia > 7) {
 printf("Valor incorreto\n");
 } else {
 
}
 }    
switch(dia){

case 1:
printf("Domingo");
break;

case 2:
printf("Segunda");
break;

case 3:
printf("Terça");
break;

case 4:
printf("Quarta");
break;

case 5:
printf("Quinta");
break;

case 6:
printf("Sexta");
break;

case 7:
printf("Sábado");
break;
}

return 0;     
     
 }
